{
  "manifest_version": 3,
  "name": "RealTalk",
  "version": "0.1",
  "description": "Analyzes YouTube video transcripts to detect AI-generated content on click.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "options_page": "settings.html",
  "web_accessible_resources": [
    {
      "resources": ["style.css"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}